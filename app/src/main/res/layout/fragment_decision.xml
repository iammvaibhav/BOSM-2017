<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientbackground"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cardBackgroundColor="#FFD548">

        <ImageView
            android:id="@+id/hamburgerIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="20dp"
            app:srcCompat="@drawable/ic_dehaze_black_24px" />


        <TextView
            android:id="@+id/bosmTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="BOSM'17"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/viewAddedPlayers"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@color/colorAccent"
        android:elevation="5dp"
        android:text="View Added Players"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/addAnother"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@color/colorAccent"
        android:elevation="5dp"
        android:text="Add Another"
        android:textColor="#ffffff" />

</LinearLayout>